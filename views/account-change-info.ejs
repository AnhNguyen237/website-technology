<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/loader %>
    <% include partials/header %>
    <div class="tt-breadcrumb">
      <div class="container">
        <ul>
          <li><a href="/">Trang chủ</a></li>
          <li><a href="/account">Tài khoản</a></li>
          <li>Chỉnh sửa thông tin tài khoản</li>
        </ul>
      </div>
    </div>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container container-fluid-custom-mobile-padding">
          <h1 class="tt-title-subpages noborder">Chỉnh sửa thông tin tài khoản</h1>
          <div class="tt-shopping-layout">
            <div class="tt-wrapper">
              <div class="form-default">
                <form method="POST">
                  <div class="wrap-box__form">
                    <div class="box__form">
                      <div class="form-group">
                        <label for="shopInputFirstName" class="control-label"
                          >Họ *</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="shopInputFirstName"
                          name="firstName"
                          value="<%= user.firstName %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="shopInputLastName" class="control-label"
                          >Tên *</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="shopInputLastName"
                          name="lastName"
                          value="<%= user.lastName %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="shopAddress" class="control-label"
                          >Địa chỉ *</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="shopAddress"
                          name="address"
                          value="<%= user.address %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="shopPhone" class="control-label"
                          >Số Điện Thoại*</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="shopPhone"
                          name="phoneNumber"
                          value="<%= user.phoneNumber %>"
                        />
                      </div>
                      <div class="form-group">
                        <label for="shopEmail" class="control-label"
                          >Địa chỉ email *</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="shopEmail"
                          name="email"
                          value="<%= user.email %>"
                        />
                      </div>
                      <div class="row" style="padding-top: 24px;">
                        <div class="col-6 form-group title-center">
                          <button class="btn btn-primary" type="submit">
                            Lưu
                          </button>
                        </div>
                        <div class="col-6 form-group title-center">
                          <a href="/account">
                            <button class="btn btn-secondary" type="button">
                              Hủy
                            </button>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/footer %>
    </footer>
    <a href="#" class="tt-back-to-top">BACK TO TOP</a>
    <!-- Partials -->
    <% include partials/modal-addtocartproduct %> <% include
    partials/modal-quickviewmodal %> <% include partials/modal-videoproduct %>
    <% include partials/modal-subscribegood %> <% include
    partials/modal-newsletter %> <% include partials/script %>
  </body>
</html>
