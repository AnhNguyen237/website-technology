<!DOCTYPE html>
<html lang='en'>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include admin-header %>
        <div class='tt-breadcrumb'>
            <div class='container'>
                <ul>
                    <li>
                        <a href='/admin'>Trang chủ</a>
                    </li>
                    <li>
                        <a href='/admin/manage-products'>Quản lý sản phẩm</a>
                    </li>
                    <li>Thêm sản phẩm</li>
                </ul>
            </div>
        </div>
        <div id='tt-pageContent'>
            <div class='container-indent'>
                <div class='container container-fluid-custom-mobile-padding'>
                    <h1 class='tt-title-subpages noborder'>Thêm sản phẩm</h1>
                    <div class='tt-shopping-layout'>
                        <div class='tt-wrapper'>
                            <h6 class='tt-title'>Thêm mới sản phẩm vào cửa hàng</h6>
                            <div class='box-info'>
                                <div class='form-default'>
                                    <form method='POST' action='/admin/add-product'>
                                        <div class='form-group'>
                                            <label for='productName' class='control-label'>Loại sản phẩm *</label>
                                            <select id="product-type" onchange="myFunction()">
                                                <option value="smartphone">Điện thoại</option>
                                                <option value="laptop">Laptop</option>
                                                <option value="iPad">Máy tính bảng</option>
                                            </select>
                                            <input type='text' class='form-control' id='product-type-selected' name='prodType' style="display: none;"/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='productName' class='control-label'>Tên sản phẩm *</label>
                                            <input type='text' class='form-control' id='product-name' name='name'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='productBrand' class='control-label'>Hãng sản xuất *</label>
                                            <input type='text' class='form-control' id='product-brand' name='brand'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='product-price' class='control-label'>Giá *</label>
                                            <input type='number' class='form-control' id='product-price' name='price'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='product-color' class='control-label'>Màu sắc *</label>
                                            <input type='text' class='form-control' id='product-color' name='color' placeholder='đỏ, xanh'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='product-desc' class='control-label'>Mô tả *</label>
                                            <input type='text' class='form-control' id='product-desc' name='description'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='product-stock' class='control-label'>Số lượng *</label>
                                            <input type='number' class='form-control' id='product-stock' name='stock'/>
                                        </div>
                                        <div class='form-group'>
                                            <label for='product-add-image' class='control-label'>Hình ảnh *</label>
                                            <input type='text' class='form-control' id='product-add-image' name='images' placeholder='https://images/smartphone.jpg'/>
                                        </div>
                                        
                                        <div class='form-group'>
                                            <h2>Thông số kỹ thuật</h2>
                                            <table class="table table-bordered">
                                                <tbody>
                                                    <tr>
                                                        <td>Màn hình:</td>
                                                        <td><input type='text' class='form-control' name='screen'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Camera sau:</td>
                                                        <td><input type='text' class='form-control' name='camaraRear'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Camera trước:</td>
                                                        <td><input type='text' class='form-control' name='camaraFront'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Bộ nhớ trong:</td>
                                                        <td><input type='text' class='form-control' name='memoryStorage'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>RAM:</td>
                                                        <td><input type='text' class='form-control' name='ram'/></td>
                                                    </tr>
                                                    
                                                    <tr>
                                                        <td>CPU:</td>
                                                        <td><input type='text' class='form-control' name='cpu'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>GPU:</td>
                                                        <td><input type='text' class='form-control' name='gpu'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Dung lượng pin:</td>
                                                        <td><input type='text' class='form-control' name='batteryCapacity'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Thẻ sim:</td>
                                                        <td><input type='text' class='form-control' name='sim'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Hệ điều hành:</td>
                                                        <td><input type='text' class='form-control' name='os'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Trọng lượng:</td>
                                                        <td><input type='text' class='form-control' name='weight'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Xuất xứ:</td>
                                                        <td><input type='text' class='form-control' name='madein'/></td>
                                                    </tr>
                                                    <tr>
                                                        <td>Thời gian ra mắt:</td>
                                                        <td><input type='text' class='form-control' name='releaseTime'/></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class='row couple-button'>
                                            <div class='col-auto'>
                                                <button type='submit' class='btn btn-primary'>Lưu</button>
                                            </div>
                                            <div class='col-auto align-self-center'>
                                                <a href='/admin/manage-products' class='tt-link'>
                                                    <button type='button' class='btn btn-secondary'>Hủy</button>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- delete hidden form -->
        <form name='delete-form' method='post'></form>
        <!-- delete hidden form -->

        <!-- Modal -->
        <div class='modal fade' id='deleteImage' tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true'>
            <div class='modal-dialog'>
                <div class='modal-content'>
                    <div class='modal-header'>
                        <h5 class='modal-title' id='exampleModalLabel'>Xóa hình ảnh</h5>
                        <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
                    </div>
                    <div class='modal-body'>
                        Bạn chắc chắn muốn xóa ảnh này?
                    </div>
                    <div class='modal-footer'>
                        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Hủy</button>
                        <button type='button' id='btn-delete' class='btn btn-primary delete'>Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script>

        var prodType = document.getElementById("product-type-selected");
        prodType.value = 'smartphone';

        function myFunction() {
            var x = document.getElementById("product-type").value;
            
            console.log(x);
            prodType.value = x;
            console.log(prodType.value);
        }
    </script>
    <% include ../partials/script %>
</html>
